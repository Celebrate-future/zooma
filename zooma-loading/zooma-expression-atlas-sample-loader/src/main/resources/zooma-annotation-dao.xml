<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Expression Atlas DAO for samples -->
    <bean name="expressionAtlasSampleDAO" class="uk.ac.ebi.fgpt.zooma.datasource.DefaultJdbcAnnotationDAO">
        <constructor-arg name="annotationFactory" ref="expressionAtlasSampleAnnotationFactory" />
        <constructor-arg name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean name="expressionAtlasSampleAnnotationFactory" class="uk.ac.ebi.fgpt.zooma.datasource.DefaultAnnotationFactory">
        <constructor-arg name="annotationLoadingSession" ref="expressionAtlasSampleLoadingSession" />
    </bean>

    <bean name="expressionAtlasSampleLoadingSession" class="uk.ac.ebi.fgpt.zooma.datasource.ExpressionAtlasSampleLoadingSession" />

    <bean name="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="datasource" />
    </bean>

    <!-- Archive Database setup -->
    <bean id="datasource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
        <property name="url" value="jdbc:oracle:thin:@rod.ebi.ac.uk:1521:AE2PRD" />
        <property name="username" value="ae2query" />
        <property name="password" value="ae22ea" />
        <property name="defaultAutoCommit" value="false" />
        <property name="initialSize" value="8" />
        <property name="maxIdle" value="8" />
        <property name="maxActive" value="8" />
        <property name="maxWait" value="-1" />
    </bean>

</beans>