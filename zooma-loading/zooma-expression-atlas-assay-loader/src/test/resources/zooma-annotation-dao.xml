<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Expression Atlas DAO for samples -->
    <bean name="expressionAtlasSampleDAO"
          class="uk.ac.ebi.fgpt.datasource.ExpressionAtlasSampleAnnotationDAO"
          autowire-candidate="false">
        <constructor-arg ref="expressionAtlasSampleLoadingSession" />
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean name="expressionAtlasSampleLoadingSession" class="uk.ac.ebi.fgpt.datasource.ExpressionAtlasSampleLoadingSession" />

    <!-- ArrayExpress DAO for assays -->
    <bean name="expressionAtlasAssayDAO"
          class="uk.ac.ebi.fgpt.zooma.datasource.ExpressionAtlasAssayAnnotationDAO"
          autowire-candidate="false">
        <constructor-arg ref="expressionAtlasAssayLoadingSession" />
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean name="expressionAtlasAssayLoadingSession" class="uk.ac.ebi.fgpt.zooma.datasource.ExpressionAtlasAssayLoadingSession" />

    <bean name="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="datasource" />
    </bean>

    <!-- Archive Database setup -->
    <bean id="datasource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
        <property name="url" value="jdbc:oracle:thin:@rod.ebi.ac.uk:1521:AE2PRD" />
        <property name="username" value="ae2query" />
        <property name="password" value="ae22ea" />
        <property name="defaultAutoCommit" value="false" />
        <property name="initialSize" value="32" />
        <property name="maxIdle" value="32" />
        <property name="maxActive" value="32" />
        <property name="maxWait" value="-1" />
    </bean>

</beans>