<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder />

    <!-- Configure AnnotationDAOs for this datasource -->
    <bean name="uniprotDAO" class="uk.ac.ebi.fgpt.zooma.datasource.UniprotHumanDiseaseAnnotationDAO" init-method="init">
        <constructor-arg name="annotationFactory" ref="uniprotAnnotationFactory" />
        <property name="uniprotHumanDiseaseResource" value="http://www.uniprot.org/docs/humdisease.txt" />
    </bean>

    <bean name="uniprotAnnotationFactory" class="uk.ac.ebi.fgpt.zooma.datasource.DefaultAnnotationFactory">
        <constructor-arg name="annotationLoadingSession" ref="uniprotLoadingSession" />
    </bean>

    <bean name="uniprotLoadingSession" class="uk.ac.ebi.fgpt.zooma.datasource.UniprotHumanDiseaseAnnotationSession" />

</beans>