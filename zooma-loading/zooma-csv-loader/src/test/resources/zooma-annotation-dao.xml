<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Configure AnnotationDAOs for this datasourceURL -->
    <bean name="csvAnnotationDAO" class="uk.ac.ebi.fgpt.zooma.datasource.CSVAnnotationDAO">
        <constructor-arg name="datasourceName" value="${datasource.name}" />
        <constructor-arg name="delimiter" value="${csv.delimiter}" />
        <property name="annotationFile" ref="${datasource.file.path}" />
        <property name="annotationFactory" ref="csvAnnotationFactory" />
    </bean>

    <bean name="csvAnnotationFactory" class="uk.ac.ebi.fgpt.zooma.datasource.CSVAnnotationFactory">
        <constructor-arg name="datasourceURL" value="${datasource.url}" />
        <constructor-arg name="datasourceName" value="${datasource.name}" />
        <constructor-arg name="annotationCreator" value="${datasource.annotation.creator}" />
        <constructor-arg name="annotationLoadingSession" ref="csvAnnotationLoadingSession" />
    </bean>

    <bean name="csvAnnotationLoadingSession" class="uk.ac.ebi.fgpt.zooma.datasource.CSVLoadingSession">
        <constructor-arg name="namespace" value="${datasource.namespace}" />
        <constructor-arg name="resourceName" value="${datasource.name}" />
    </bean>

</beans>