<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="
          http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
          http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>archive</id>

    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <!-- copy any resources or config files into config/ -->
        <fileSet>
            <directory>src/main/resources/</directory>
            <outputDirectory>config/</outputDirectory>
        </fileSet>
        <!-- copy additional application resources (specified for profiles) -->
        <fileSet>
            <directory>${additional.resources.path}</directory>
            <outputDirectory>config/</outputDirectory>
        </fileSet>
    </fileSets>

    <!-- copy all declared dependencies (should just be loaders) into loaders/ dir -->
    <dependencySets>
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <fileMode>0644</fileMode>
            <outputDirectory>loaders/</outputDirectory>
            <excludes>
                <!-- exclude sources on the off-chance that loaders attach them -->
                <exclude>*:sources</exclude>
                <!-- exclude this module, don't need a self-reference -->
                <exclude>*:zooma-configurations:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

</assembly>
