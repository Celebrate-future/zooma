<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p (%F:%L) - %m%n" />
        </layout>
    </appender>

    <appender name="zooma-log" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p (%F:%L) - %m%n" />
        </layout>
    </appender>

    <appender name="mapping-log" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <param name="File" value="zooma.mapping_issues.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d] %-5p (%F:%L) - %m%n" />
        </layout>
    </appender>

    <logger name="uk.ac.ebi.fgpt.zooma.service.SesameRepositoryManager" additivity="false">
        <level value="TRACE" />
        <appender-ref ref="zooma-log" />
    </logger>

    <logger name="uk.ac.ebi.fgpt.zooma.service.ZoomaLuceneIndexer" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="zooma-log" />
    </logger>

    <logger name="uk.ac.ebi.fgpt.zooma.service.MultithreadedDataLoadingService" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="zooma-log" />
    </logger>

    <logger name="uk.ac.ebi.fgpt.zooma.util.ZoomaLoaderInvoker" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="zooma-log" />
    </logger>

    <logger name="org.springframework" additivity="false">
        <level value="WARN" />
        <appender-ref ref="zooma-log" />
    </logger>

    <root>
        <priority value="INFO" />
        <appender-ref ref="zooma-log" />
    </root>

</log4j:configuration>
