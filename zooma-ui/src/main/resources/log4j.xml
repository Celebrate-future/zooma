<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </layout>
    </appender>

    <appender name="zooma-log" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <param name="File" value="${catalina.base}/logs/${tomcat.hostname}/zooma.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </layout>
    </appender>

    <logger name="org.springframework" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="zooma-log"/>
    </logger>

    <logger name="org.openrdf" additivity="false">
        <level value="WARN"/>
        <appender-ref ref="zooma-log"/>
    </logger>

    <logger name="uk.ac.ebi.fgpt.zooma.access.ZoomaAnnotationLoader" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="zooma-log"/>
    </logger>

    <logger name="org.apache.lucene.search" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="zooma-log"/>
    </logger>
    
    <logger name="uk.ac.ebi.fgpt.zooma.service.NeedlemanJaccardAnnotationSummarySearchService" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="zooma-log"/>
    </logger>

    <logger name="uk.ac.ebi.fgpt.zooma.service.PostProcessingAnnotationSummarySearchService" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="zooma-log"/>
    </logger>
    
    <logger name="uk.ac.ebi.fgpt.zooma.access.ZoomaAnnotationSummarySearcher" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="zooma-log"/>
    </logger>
    
    <logger name="uk.ac.ebi.fgpt.zooma.access.ZoomaSearcher" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="zooma-log"/>
    </logger>
    
    <logger name="uk.ac.ebi.fgpt.zooma.access.ZoomaAnnotationSearcher" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="zooma-log"/>
    </logger>
    
    <logger name="uk.ac.ebi.fgpt.zooma.web.ZoomaMappingController" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="zooma-log"/>
    </logger>

    <logger name="uk.ac.ebi.fgpt.zooma.service.MultithreadedDataLoadingService" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="zooma-log"/>
    </logger>

    <root>
        <priority value="INFO" />
        <appender-ref ref="zooma-log" />
    </root>

</log4j:configuration>
